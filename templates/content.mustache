{{!
    @template block_anotasi/content

    Template for displaying block content on web interface.

    Context variables required for this template:
    * modul_name - Name of the module
    * course_id - Course ID
    * modul_id - Module ID
    * annotation_count - Number of annotations
    * view_url - URL to view detailed content
}}
<div class="block-anotasi-content">
    <div class="module-info">
        <h4>{{modul_name}}</h4>
        <p class="course-info">
            <strong>Course:</strong> {{course_id}}<br>
            <strong>Module:</strong> {{modul_id}}
        </p>
        <p class="annotation-count">
            <span class="badge badge-secondary">{{annotation_count}} annotations</span>
        </p>
    </div>
    
    <div class="block-actions">
        <a href="{{view_url}}" class="btn btn-primary btn-sm">
            <i class="fa fa-book"></i> View Annotations
        </a>
    </div>
</div>

<style>
.block-anotasi-content {
    padding: 10px;
}

.module-info h4 {
    margin-bottom: 10px;
    color: #333;
}

.course-info {
    font-size: 0.9em;
    margin-bottom: 10px;
    color: #666;
}

.annotation-count {
    margin-bottom: 15px;
}

.block-actions {
    text-align: center;
}

.badge {
    padding: 4px 8px;
    border-radius: 12px;
    font-size: 0.8em;
}

.badge-secondary {
    background-color: #6c757d;
    color: white;
}
</style>